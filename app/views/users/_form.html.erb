<% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with model: user do |form| %>
    <div>
        <%= form.label :username %>
        <%= form.text_field :username, placeholder: "Enter the username" %>
    </div>
    <br>
    <div>
        <%= form.label :email %>
        <%= form.text_field :email, placeholder: "Enter the email" %>
    </div>
    <br>
    <div>
        <%= form.label :password %> 
        <%= form.text_field :password, placeholder: "Enter the password" %>
    </div>
    <br>

    <div>
        <%= form.submit %>
    </div>
<% end %>