<h1>New User</h1>

<%= form_with model: @user do |form| %>
    <div>
        <%= form.label :username %>
        <%= form.text_field :username, placeholder: "Enter the username" %><br>
        <br>
    </div>
    <div>
        <%= form.label :email %>
        <%= form.text_field :email, placeholder: "Enter the email" %>
        <br>
    </div>
    <div>
        <%= form.label :password %> 
        <%= form.text_field :password, placeholder: "Enter the password" %>
        <br>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>